<form action="{{ path('admin.categories.delete', {id: categorie.id}) }}" method='POST' onsubmit="return confirm ('Etes vous sur de vouloir supprimer cet categorie ?')">
	<input type="hidden" name="id" value="{{ categorie.id }}">
	<input type="hidden" name="token" value="{{ csrf_token ('delete' ~ categorie.id) }}">
	<button type='submit' class='btn btn-danger'>Supprimer</button>
</form>